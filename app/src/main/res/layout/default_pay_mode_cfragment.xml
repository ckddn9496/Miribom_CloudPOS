<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.v7.widget.CardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:cardUseCompatPadding="true"
                app:cardElevation="4dp"
                app:cardCornerRadius="3dp" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/table2"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="85dp"
                        android:layout_height="85dp" />

                    <TextView
                        android:id="@+id/def_pay_tableNo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal|bottom"
                        android:textColor="@color/pinkfont"
                        android:fontFamily="@font/scdream3"
                        android:layout_marginBottom="20dp"
                        android:text="1번 테이블"
                        android:textSize="30dp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </LinearLayout>

        <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="3dp" >

            <!-- put whatever you want -->
            <GridView
                android:id="@+id/def_pay_menuGridView"
                android:numColumns="4"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></GridView>

        </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_weight="0.5"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/def_pay_cashPayBtn"
                android:background="@drawable/paybtn"
                android:textColor="@color/white"
                android:fontFamily="@font/scdream3"
                android:text="현 금  결 제"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/def_pay_cardPayBtn"
                android:background="@drawable/paybtn"
                android:textColor="@color/white"
                android:fontFamily="@font/scdream3"
                android:text="카드 결제"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/def_pay_combPayBtn"
                android:background="@drawable/paybtn"
                android:textColor="@color/white"
                android:fontFamily="@font/scdream3"
                android:text="분할 결제"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>