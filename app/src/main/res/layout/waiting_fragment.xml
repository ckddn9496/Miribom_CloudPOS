<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentDefault">

    <LinearLayout
        android:weightSum="11"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/cardview_dark_background"
            android:weightSum="20"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_line"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:textColor="#FFFFFF"
                android:layout_weight="19"
                android:text="웨이팅 관리"
                android:textSize="40dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/waitingSlotsLayout"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <GridView
                android:id="@+id/waitingSlotGridView"
                android:horizontalSpacing="1dp"
                android:verticalSpacing="1dp"
                android:numColumns="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></GridView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sendTextBtn"
                android:background="@drawable/sendsmsbtn"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/scdream2"
                android:paddingBottom="10dp"
                android:gravity="bottom|center"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="알림 보내기" />

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
            <Button
                android:id="@+id/enterBtn"
                android:background="@drawable/admitbtn"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:fontFamily="@font/scdream2"
                android:paddingBottom="10dp"
                android:gravity="bottom|center"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:text="입장 시키기" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>